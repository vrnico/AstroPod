@{
    ViewData["Title"] = "Add Inventory Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using AstroPod.Models
@model Comment

<br>
<h2>You can't join the pod until you post your thoughts!</h2>
<br />
@using (Html.BeginForm("New", "Comment", FormMethod.Post))
{
    <div class="form-group">
       <label>Title</label>
        @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TextBody)
        @Html.TextAreaFor(x => x.TextBody, new { @class = "form-control" })
    </div>




    <input type="submit" value="POST" class="btn-lg btn-success" />
}