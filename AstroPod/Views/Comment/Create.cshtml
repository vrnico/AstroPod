

@model AstroPod.Models.Comment

@{
    ViewData["Title"] = "Comment - Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a New Comment</h2>
<hr />


@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.SunZodId)
    <div class="form-group">
        @Html.LabelFor(model => model.Author)
        @Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TextBody)
        @Html.TextAreaFor(x => x.TextBody, new { @class = "form-control" })
    </div>


    <input type="submit" value="Create" class="btn btn-default" />

}