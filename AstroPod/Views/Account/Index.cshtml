@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Security.Claims
@model AstroPod.Models.AppUser
@using AstroPod.ViewModels

<div class="container">
    <h2>AstroPod Dashboard </h2>



    @if (User.Identity.IsAuthenticated)
    {



        <h1>Hello @User.Identity.Name</h1>
        <h3>Born: @Model.BirthDate</h3>
        <h3>Sun Sign: <a href="Content/@Model.SunId">@Model.SunZod</a></h3>
        <p>@Model.SunDesc</p>
        <h3>Moon Sign:<a href="Moon/@Model.MoonId"> @Model.MoonZod </a></h3>
        <h3>Mercury Sign: <a href="Content/@Model.MercId">@Model.MercZod</a></h3>
        <h3>Venus Sign:<a href="Content/@Model.VenusId"> @Model.VenusZod</a></h3>
        <h3>Mars Sign:<a href="Content/@Model.MarsId"> @Model.MarsZod</a></h3>
        <h3>Jupiter Sign:<a href="Content/@Model.JupiterId"> @Model.JupiterZod</a></h3>
        <h3>Saturn Sign:<a href="Content/@Model.SaturnId"> @Model.SaturnZod</a></h3>
        <h3>Uranus Sign:<a href="Content/@Model.UranusId"> @Model.UranusZod</a></h3>
        <h3>Neptune Sign:<a href="Content/@Model.NeptuneId"> @Model.NeptuneZod </a></h3>
        
        <h3>Pluto Sign : Scorpio *</h3>

        <a-scene embedded>
            <a-assets>
                <a-mixin id="cube" geometry="primitive: sphere; depth: 1; height: 1; width: 1"
                         material="color: black transparent: true;">
                </a-mixin>
                <a-mixin id="sun" material="color : yellow"></a-mixin>
                <a-mixin id="moon" material="color: blue"></a-mixin>
                <a-mixin id="merc" material="color: #FFA07A"></a-mixin>
                <a-mixin id="venus" material="color: #FFC300"></a-mixin>
                <a-mixin id="mars" material="color: #C70039"></a-mixin>
                <a-mixin id="jupiter" material="color: #935116"></a-mixin>
                <a-mixin id="saturn" material="color: #6C3483"></a-mixin>
                <a-mixin id="uranus" material="color: #48C9B0"></a-mixin>
                <a-mixin id="neptune" material="color: #A9CCE3"></a-mixin>
            </a-assets>


            <a-entity layout="type: circle; radius: 2.5; angle: @Model.UserSun;" position="0 5 -20">


                <a-entity></a-entity>
                <a-entity mixin="cube sun"></a-entity>
            </a-entity>

            <a-entity layout="type: circle; radius: 5; angle: @Model.UserMoon;" position="0 5 -20">
                <a-entity></a-entity>
                <a-entity mixin="cube moon"></a-entity>
            </a-entity>

            <a-entity layout="type: circle; radius: 7.5; angle: @Model.UserMerc;" position="0 5 -20">
                <a-entity></a-entity>
                <a-entity mixin="cube merc"></a-entity>
            </a-entity>

            <a-entity layout="type: circle; radius: 10; angle: @Model.UserVenus;" position="0 5 -20">
                <a-entity></a-entity>
                <a-entity mixin="cube venus"></a-entity>
            </a-entity>

            <a-entity layout="type: circle; radius: 12.5; angle: @Model.UserMars;" position="0 5 -20">

                <a-entity></a-entity>
                <a-entity mixin="cube mars"></a-entity>
            </a-entity>


            <a-entity layout="type: circle; radius: 15; angle: @Model.UserJupiter;" position="0 5 -20">
                <a-entity></a-entity>
                <a-entity mixin="cube jupiter"></a-entity>
            </a-entity>


            <a-entity layout="type: circle; radius: 17.5; angle: @Model.UserSaturn;" position="0 5 -20">
                <a-entity></a-entity>
                <a-entity mixin="cube saturn"></a-entity>
            </a-entity>

            <a-entity layout="type: circle; radius: 20; angle: @Model.UserUranus;" position="0 5 -20">
                <a-entity></a-entity>
                <a-entity mixin="cube uranus"></a-entity>
            </a-entity>

            <a-entity layout="type: circle; radius: 22.5; angle: @Model.UserNeptune;" position="0 5 -20">

                <a-entity></a-entity>
                <a-entity mixin="cube neptune"></a-entity>
            </a-entity>
        </a-scene>
        <br />
        <br />

        @using (Html.BeginForm("LogOff", "Account"))
        {
            <input type="submit" class="btn btn-default" value="Log out" />
        }

    }
    else
    {
        <br />
        <br />
        <div class="btn-lg btn btn-danger">@Html.ActionLink("Register", "Register")</div>
        <br />
        <br />
        <div class="btn-lg btn btn-success">@Html.ActionLink("Log in", "Login")</div>
        <br />
        <br />
        <br />
    }

</div>

